<?xml version="1.0" encoding="utf-8"?>
<shortcuts xmlns:android="http://schemas.android.com/apk/res/android">
    <shortcut
        android:shortcutId="fileSearch"
        android:enabled="true"
        android:icon="@drawable/shortcut_search"
        android:shortcutShortLabel="@string/shortcut_search"
        android:shortcutLongLabel="@string/shortcut_search"
        android:shortcutDisabledMessage="@string/shortcut_search_message">

        <intent
            android:action="android.intent.action.VIEW"
            android:targetPackage="com.chenxu.workassistant"
            android:targetClass="com.chenxu.workassistant.fileSearch.FileSearchActivity" />
        <categories android:name="android.shortcut.conversation"/>
    </shortcut>

    <shortcut
        android:shortcutId="sendEmail"
        android:enabled="true"
        android:icon="@drawable/shortcut_email"
        android:shortcutShortLabel="@string/shortcut_email"
        android:shortcutLongLabel="@string/shortcut_email"
        android:shortcutDisabledMessage="@string/shortcut_email_message">

        <intent
            android:action="android.intent.action.VIEW"
            android:targetPackage="com.chenxu.workassistant"
            android:targetClass="com.chenxu.workassistant.login.LoginActivity" />
        <categories android:name="android.shortcut.conversation"/>
    </shortcut>
</shortcuts>